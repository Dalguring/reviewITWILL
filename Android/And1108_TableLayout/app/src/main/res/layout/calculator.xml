<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow>
            <EditText
                android:id="@+id/etNum1"
                android:hint="숫자1 입력"
                android:textSize="30sp"
                android:inputType="number"
                android:layout_span="5"/>
        </TableRow>

        <TableRow>
            <EditText
                android:id="@+id/etNum2"
                android:hint="숫자2 입력"
                android:layout_span="5"
                android:textSize="30sp"
                android:layout_marginBottom="30dp"
                android:inputType="number"/>
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/btn0"
                android:text="0"
                android:textSize="30sp"
                android:backgroundTint="#5D5D5D"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btn1"
                android:text="1"
                android:textSize="30sp"
                android:backgroundTint="#5D5D5D"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btn2"
                android:text="2"
                android:textSize="30sp"
                android:backgroundTint="#5D5D5D"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btn3"
                android:text="3"
                android:textSize="30sp"
                android:backgroundTint="#5D5D5D"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btn4"
                android:text="4"
                android:textSize="30sp"
                android:backgroundTint="#5D5D5D"
                android:layout_weight="1"/>

        </TableRow>

        <TableRow
            >
            <Button
                android:id="@+id/btn5"
                android:text="5"
                android:textSize="30sp"
                android:backgroundTint="#5D5D5D"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btn6"
                android:text="6"
                android:textSize="30sp"
                android:backgroundTint="#5D5D5D"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btn7"
                android:text="7"
                android:textSize="30sp"
                android:backgroundTint="#5D5D5D"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btn8"
                android:text="8"
                android:textSize="30sp"
                android:backgroundTint="#5D5D5D"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btn9"
                android:text="9"
                android:textSize="30sp"
                android:backgroundTint="#5D5D5D"
                android:layout_weight="1"/>

        </TableRow>

        <Button
            android:id="@+id/btnPlus"
            android:text="더하기"
            android:textSize="30sp"
            android:backgroundTint="#0000FF"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/btnSub"
            android:text="빼   기"
            android:textSize="30sp"
            android:backgroundTint="#0000FF"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btnMulti"
            android:text="곱하기"
            android:textSize="30sp"
            android:backgroundTint="#0000FF"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btnDiv"
            android:text="나누기"
            android:textSize="30sp"
            android:backgroundTint="#0000FF"
            android:layout_marginTop="10dp"/>

        <TextView
            android:text="계산결과 : "
            android:textSize="30sp"
            android:id="@+id/result"
            android:layout_marginTop="20dp"/>

    </TableLayout>
</LinearLayout>